doctype html
head
  link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Baloo+2")
  link(rel="stylesheet", href="/assets/css/styles.css")
  title=title
div.main-content
  div.header
    h1.header-text Shortify
  div.form-area
    form(action="/api/shorten", method="POST")
      div.input-area
        h3.label(style='margin-top: 0px;') Long URL:
        input#url-input(type='text' name='url' placeholder='https://example.com/soooo-long')
        h3.label(style='margin-top: 12px;') Slug (optional):
        div.input-group
          div.input-group-icon=website
          div.input-group-area
            input#slug-input(type='text' name='slug' placeholder='so-short')
        div.submit-container
          button(type='submit') Make it short!